{
  "name": "bif",
  "version": "0.4.0",
  "description": "a static site server",
  "author": "Zab",
  "license": "MIT",
  "homepage": "http://zab.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zab/bif.git"
  },
  "engines": {
    "node": ">=4"
  },
  "keywords": [
    "static",
    "site",
    "server",
    "html5",
    "pushstate",
    "biff",
    "bif"
  ],
  "files": [
    "assets/",
    "bin/",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "main": "lib/index.js",
  "bin": {
    "bif": "bin/bif"
  },
  "scripts": {
    "lint": "exlint src test",
    "pretest": "rm -rf .nyc_output coverage && npm run lint",
    "test": "cross-env NODE_ENV=testing nyc ava test -a && nyc report -r=lcov",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "build": "rm -rf lib && babel src -d lib --no-comments",
    "watch": "npm run build -- -w -s",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "ava": "0.14.0",
    "babel-cli": "6.8.0",
    "babel-plugin-transform-runtime": "6.8.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.8.0",
    "coveralls": "2.11.9",
    "cross-env": "^1.0.7",
    "exlint": "^0.1.3",
    "nyc": "6.4.2"
  },
  "dependencies": {
    "babel-runtime": "6.6.1",
    "chalk": "1.1.3",
    "compression": "1.6.1",
    "denodeify": "1.2.1",
    "express": "4.13.4",
    "fs-extra": "0.30.0",
    "fs-promise": "0.5.0",
    "glob": "7.0.3",
    "http-proxy": "1.13.2",
    "lodash": "4.11.2",
    "micromatch": "2.3.8",
    "minimist": "1.2.0",
    "open": "0.0.5",
    "prerender-node": "2.2.1",
    "serve-static": "1.10.2",
    "source-map-support": "0.4.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ]
  }
}

{
  "name": "zab-server",
  "version": "0.4.0",
  "description": "a static site server",
  "author": "Jason Maurer",
  "homepage": "http://zab.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zab/server.git"
  },
  "files": [
    "assets/",
    "lib/",
    "README.md"
  ],
  "bin": {
    "zab-server": "lib/bin/index.js"
  },
  "main": "lib/",
  "scripts": {
    "clean": "rm -rf .nyc_output coverage lib",
    "lint": "eslint src tests",
    "pretest": "npm run clean && npm run lint",
    "test": "nyc ava tests -a -i babel-register && nyc report -r=lcov",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "build": "npm run clean && babel src -d lib --no-comments",
    "watch": "npm run build -- -w -s",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "ava": "0.13.0",
    "babel-cli": "6.6.5",
    "babel-eslint": "6.0.0-beta.6",
    "babel-plugin-transform-runtime": "6.6.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.7.2",
    "coveralls": "2.11.8",
    "eslint": "2.4.0",
    "eslint-config-zab": "0.1.3",
    "nyc": "6.1.1",
    "source-map-support": "0.4.0"
  },
  "dependencies": {
    "babel-runtime": "6.6.1",
    "chalk": "1.1.1",
    "compression": "1.6.1",
    "connect": "3.4.1",
    "denodeify": "1.2.1",
    "dotenv": "2.0.0",
    "fs-extra": "0.26.7",
    "glob": "7.0.3",
    "http-server": "0.9.0",
    "lodash": "4.6.1",
    "minimatch": "3.0.0",
    "minimist": "1.2.0",
    "open": "0.0.5",
    "portfinder": "1.0.3",
    "serve-static": "1.10.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": "zab",
    "parser": "babel-eslint"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "src"
    ]
  }
}
